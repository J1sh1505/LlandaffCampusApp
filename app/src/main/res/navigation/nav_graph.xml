<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.llandaffcampusapp.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.example.llandaffcampusapp.ExploreFragment"
        android:label="Explore"
        tools:layout="@layout/fragment_explore" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.llandaffcampusapp.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.llandaffcampusapp.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/action_mapFragment_to_mapIndexFragment"
            app:destination="@id/mapIndexFragment" />
    </fragment>

    <fragment
        android:id="@+id/mapIndexFragment"
        android:name="com.example.llandaffcampusapp.MapIndexFragment"
        android:label="Map Legend"
        tools:layout="@layout/fragment_map_index" />

</navigation>
